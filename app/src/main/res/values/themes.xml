<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FeelOScope" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_gradient_start</item>
        <item name="colorPrimaryVariant">@color/brand_gradient_end</item>
        <item name="colorOnPrimary">@color/text_primary_on_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_mint</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/icon_on_accent</item>
        <item name="android:colorBackground">@color/brand_background_light</item>
        <item name="android:navigationBarColor">@color/brand_background_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FeelOScope.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FeelOScope.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FeelOScope.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearance.FeelOScope.NavigationItem" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>
</resources>
